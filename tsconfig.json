{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@main/*": ["./src/main-process/*"],
      "@renderer/*": ["./src/renderer/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte"
  ],
  "exclude": [
    "out/*",
    "node_modules/*"
  ],
  "ts-node": {
    "transpileOnly": true
  },
}
